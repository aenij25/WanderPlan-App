<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F7FA"
    tools:context=".Activity.LoginActivity">


    <LinearLayout

        android:id="@+id/ll_root_loading_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="30dp"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="222dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="100dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/wanderplan_colour"
                tools:layout_editor_absoluteX="122dp"
                tools:layout_editor_absoluteY="72dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="112dp"
                android:layout_height="36dp"
                android:layout_marginStart="20dp"
                android:text="WanderPlan"
                android:textAlignment="center"
                android:textColor="#138DED"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                tools:layout_editor_absoluteY="76dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please enter your account here"
            android:paddingStart="100dp"
            android:layout_marginTop="100dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:text="Your Email"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_identifier"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:background="@color/app_accent_light"
            android:backgroundTint="@color/light_grey" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="Your Password"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@color/app_accent_light"
            android:backgroundTint="@color/light_grey"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btn_login"
            style="@style/btn_accent_solid_rounded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:text="Log In" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="78dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="Donâ€™t have any account?"
                app:layout_constraintEnd_toStartOf="@+id/btn_register"
                tools:layout_editor_absoluteY="546dp" />

            <Button
                android:id="@+id/btn_register"
                style="@style/btn_transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textAllCaps="false"
                android:textColor="#3F51B5" />
        </LinearLayout>

    </LinearLayout>







</androidx.constraintlayout.widget.ConstraintLayout>