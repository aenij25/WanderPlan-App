<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints"
    tools:context=".Activity.DetailHome">

    <Button
        android:id="@+id/btn_selectRoom"
        style="@style/btn_accent_solid_rounded"
        android:layout_width="360dp"
        android:layout_height="48dp"
        android:text="Select a room"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="658dp"
        />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="420dp"
        android:layout_height="430dp"
        android:src="@drawable/detailhotel1"
        tools:layout_editor_absoluteX="-5dp"
        tools:layout_editor_absoluteY="-81dp" />

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:padding="8dp"
        android:src="@drawable/baseline_arrow_back_24"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="34dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="380dp"
        android:layout_height="236dp"
        android:src="@drawable/rectangledetail"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="247dp" />

    <TextView
        android:id="@+id/tv_negara"
        style="@style/MainFragmentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="328dp"
        android:text="Indonesia"
        android:textColor="@color/font_default"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="61dp" />

    <TextView
        android:id="@+id/tv_kota"
        style="@style/MainFragmentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="308dp"
        android:text="Atlantis City"
        android:textColor="@color/font_default"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="61dp" />

    <TextView
        android:id="@+id/tv_rating"
        style="@style/MainFragmentTitle"
        android:layout_width="44dp"
        android:layout_height="31dp"
        android:layout_marginTop="408dp"
        android:text="4.9"
        android:textColor="#3F51B5"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="97dp" />

    <TextView
        android:id="@+id/textView1"
        style="@style/MainFragmentTitle"
        android:layout_width="85dp"
        android:layout_height="30dp"
        android:layout_marginTop="364dp"
        android:text="/ night"
        android:textColor="@color/font_default"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="183dp" />

    <ImageView
        android:id="@+id/iconStar"
        android:layout_width="36dp"
        android:layout_height="34dp"
        android:src="@drawable/ic_star_solid_yellow"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="408dp" />

    <TextView
        android:id="@+id/tv_harga"
        style="@style/MainFragmentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="364dp"
        android:text="799.000 IDR"
        android:textColor="#3F51B5"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="61dp" />

    <TextView
        android:id="@+id/tv_namaHotel"
        style="@style/MainFragmentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:text="Neptune Resort"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="61dp" />

    <Button
        android:id="@+id/btnDetail"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail"
        android:textColor="#3F51B5"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="470dp" />

    <Button
        android:id="@+id/btnOverview"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Overview"
        android:textColor="@color/font_default"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="470dp" />

    <Button
        android:id="@+id/btnReview"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Review"
        android:textColor="@color/font_default"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="211dp"
        tools:layout_editor_absoluteY="470dp" />

    <ImageView
        android:id="@+id/widgetUnderline"
        android:layout_width="51dp"
        android:layout_height="3dp"
        android:src="@drawable/underlinebtn"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="504dp" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="297dp"
        android:layout_height="101dp"
        android:text="Neptune Resort is the most luxurious luxury hotel segment of Capi, located in big...  "
        android:textSize="20sp"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="534dp" />

</androidx.constraintlayout.widget.ConstraintLayout>