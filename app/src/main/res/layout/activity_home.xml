<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.HomeDashboard">

    <TextView
        android:id="@+id/tv_welcome2"
        style="@style/MainFragmentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's explore the world!"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tv_welcome"
        app:layout_constraintTop_toBottomOf="@+id/tv_welcome" />

    <ImageView
        android:id="@+id/boxMenuButton"
        android:layout_width="409dp"
        android:layout_height="129dp"
        android:src="@drawable/menu_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boxScroll2"
        app:layout_constraintVertical_bias="0.909" />

    <Button
        android:id="@+id/notifbtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/notification"
        android:backgroundTint="@color/dark_grey"
        app:layout_constraintEnd_toStartOf="@+id/profilbtn"
        app:layout_constraintHorizontal_bias="0.785"
        app:layout_constraintStart_toStartOf="@+id/boxMenuButton"
        app:layout_constraintTop_toTopOf="@+id/boxMenuButton" />

    <Button
        android:id="@+id/transbtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="49dp"
        android:background="@drawable/activity"
        android:backgroundTint="@color/dark_grey"
        app:layout_constraintBottom_toBottomOf="@+id/boxMenuButton"
        app:layout_constraintStart_toEndOf="@+id/homeBtn"
        app:layout_constraintTop_toTopOf="@+id/boxMenuButton"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/profilbtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/profile"
        android:backgroundTint="@color/dark_grey"
        app:layout_constraintBottom_toBottomOf="@+id/boxMenuButton"
        app:layout_constraintEnd_toStartOf="@+id/homeBtn"
        app:layout_constraintTop_toTopOf="@+id/boxMenuButton"
        app:layout_constraintVertical_bias="0.505" />

    <Button
        android:id="@+id/mapsbtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="44dp"
        android:background="@drawable/discovery"
        android:backgroundTint="@color/dark_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/boxMenuButton"
        app:layout_constraintHorizontal_bias="0.121"
        app:layout_constraintStart_toEndOf="@+id/transbtn"
        app:layout_constraintTop_toTopOf="@+id/boxMenuButton" />

    <Button
        android:id="@+id/homeBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/home"
        android:backgroundTint="@color/active_tab_color"
        app:layout_constraintBottom_toBottomOf="@+id/boxMenuButton"
        app:layout_constraintEnd_toEndOf="@+id/boxMenuButton"
        app:layout_constraintStart_toStartOf="@+id/boxMenuButton"
        app:layout_constraintTop_toTopOf="@+id/boxMenuButton" />

    <ImageView
        android:id="@+id/dotActiveBtn"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/dot"
        app:layout_constraintBottom_toBottomOf="@+id/boxMenuButton"
        app:layout_constraintEnd_toEndOf="@+id/boxMenuButton"
        app:layout_constraintStart_toStartOf="@+id/boxMenuButton"
        app:layout_constraintTop_toBottomOf="@+id/homeBtn"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_welcome"
        style="@style/MainFragmentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Hi Aeni"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:id="@+id/boxScroll1"
        android:layout_width="411dp"
        android:layout_height="182dp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_titleBox1"
        tools:layout_editor_absoluteX="-1dp">

        <LinearLayout
            android:id="@+id/imageContainer1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/h_img_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:baselineAlignBottom="false"
                android:textAlignment="viewStart" />


        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/tv_titleBox1"
        style="@style/MainFragmentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="New Place"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/tv_welcome2"
        app:layout_constraintTop_toBottomOf="@+id/tv_welcome2" />

    <Button
        android:id="@+id/btn_seemore1"
        style="@style/btn_transparent"
        android:layout_width="74dp"
        android:layout_height="30dp"
        android:layout_marginStart="172dp"
        android:layout_marginTop="20dp"
        android:text="See more"
        android:textAllCaps="false"
        android:textColor="#3F51B5"
        app:layout_constraintStart_toEndOf="@+id/tv_titleBox1"
        app:layout_constraintTop_toBottomOf="@+id/tv_welcome2" />

    <Button
        android:id="@+id/icon1"
        android:layout_width="24dp"
        android:layout_height="20dp"
        android:layout_marginTop="96dp"
        android:background="@drawable/arrow___right_2"
        app:layout_constraintStart_toEndOf="@+id/btn_seemore1"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:id="@+id/boxScroll2"
        android:layout_width="410dp"
        android:layout_height="264dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_titleBox2"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:id="@+id/imageContainer2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginVertical="@dimen/category_spacing"
            android:orientation="horizontal">

        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/tv_titleBox2"
        style="@style/MainFragmentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Popular Hotel"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/tv_titleBox1"
        app:layout_constraintTop_toBottomOf="@+id/boxScroll1" />

    <Button
        android:id="@+id/btn_seemore2"
        style="@style/btn_transparent"
        android:layout_width="74dp"
        android:layout_height="30dp"
        android:layout_marginStart="140dp"
        android:text="See more"
        android:textAllCaps="false"
        android:textColor="#3F51B5"
        app:layout_constraintStart_toEndOf="@+id/tv_titleBox2"
        app:layout_constraintTop_toBottomOf="@+id/boxScroll1" />

    <Button
        android:id="@+id/icon2"
        android:layout_width="24dp"
        android:layout_height="20dp"
        android:layout_marginTop="308dp"
        android:background="@drawable/arrow___right_2"
        app:layout_constraintEnd_toEndOf="@+id/boxScroll1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btn_seemore2"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>